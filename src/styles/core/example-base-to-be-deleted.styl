@import url('https://fonts.googleapis.com/css?family=Roboto+Slab')
$bgndTestColor = Gainsboro

fontSize(n)
	font-size n px
	font-size (n/10) rem

body
	background-color $bgndTestColor
	height 100%
	min-height 100%
	
h1
	font-family 'Roboto Slab', sans-serif;
	color Purple
	text-align center
	
h2
	list-style-type circle
	fontSize(14)
	font-weight bold
	color #666
	text-align left

a
	text-decoration none
	color Purple
	font-weight bold
.example-list-item
	color #333

.example-body-wrapper
	width 75%
	margin 0 auto
	
.example-foreground-img
	display inline-block
	height 72px
	width 72px
	
.example-background-img
	display inline-block
	height 72px
	width 72px
	background-image url('../images/ubuntu-512.png') 
	background-position center center 
	background-repeat no-repeat
	background-size 100%