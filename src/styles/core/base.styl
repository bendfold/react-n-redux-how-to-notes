@import url('https://fonts.googleapis.com/css?family=Roboto+Slab')
$bgndTestColor = Gainsboro

fontSize(n)
	font-size n px
	font-size (n/10) rem

body
	background-color $bgndTestColor
	height 100%
	min-height 100%

h1
	font-family 'Roboto Slab', sans-serif;
	color Purple
	text-align center

h2
	list-style-type circle
	fontSize(14)
	font-weight bold
	color #666
	text-align left

a
	text-decoration none
	color Purple
	font-weight bold

ul
	margin 0
	padding 0
